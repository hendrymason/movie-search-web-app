@model Hendry_Mason_HW3.Models.SearchViewModel

@{
    ViewData["Title"] = "Detailed Search";
}

<h1>Detailed Search</h1>

<h4>Enter Your Specific Search Criteria</h4>
<hr />
<p>Displaying @ViewBag.SelectedShows of @ViewBag.AllShows Shows</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="DisplaySearchResults" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cast" class="control-label"></label>
                <input asp-for="Cast" class="form-control" />
                <span asp-validation-for="Cast" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAdded" class="control-label"></label>
                <input asp-for="DateAdded" class="form-control" />
                <span asp-validation-for="DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearReleased" class="control-label"></label>
                <input asp-for="YearReleased" class="form-control" />
                <span asp-validation-for="YearReleased" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SearchType" class="control-label"></label><br />
                <input type="radio" class="radio" asp-for="SearchType" value="@Typeof.Before" /> Before The Year Selected<br />
                <input type="radio" class="radio" asp-for="SearchType" value="@Typeof.After" /> After The Year Selected<br />
                <span asp-validation-for="SearchType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                @Html.DropDownListFor(model => model.Category, (SelectList)ViewBag.AllCategories, new { @class = "form-control" })
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="searchRating" class="control-label"></label>
                <select asp-for="searchRating" asp-items="Html.GetEnumSelectList<Rating>()" class="form-control">
                    <option selected="selected" value="">All Ratings</option>
                </select>
                <span asp-validation-for="searchRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

